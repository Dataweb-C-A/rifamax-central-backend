%html
  %head
    %meta{:charset => "utf-8"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %link{:rel => "shortcut icon", :type => "image/png", :href => "/meta/favicon.ico"}
    %link{:rel => "stylesheet", :href => "/css/bootstrap.min.css"}

  %body{:style => "background-color: #eef5f9;"}
    .container
      %div{:class => "row justify-content-center mt-6"}
        .col-12
          %div{:class => "card mt-2", :style => "max-width: 20rem; margin: auto;"}
            =image_tag("/logo-rifamax.png", :class => "max-width: 20rem; margin: auto;", alt: "Logo Rifamax")
            .card-body
              %h5{:class => "card-title text-center"} #{@rifa.numbers} - #{@tickets.sign.upcase!}
              %h5{:class => "card-title text-center"} PRECIO: #{@rifa.price.to_i}#{@rifa.money}
              .row
                = render 'awards'
                = render 'data'
        = render 'rules'